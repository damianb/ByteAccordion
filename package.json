{
  "name": "byteaccordion",
  "version": "1.1.6",
  "description": "ByteAccordion - JS library for smooth, Promise-based interaction with File and Buffer resources.",
  "main": "build/ByteAccordion.js",
  "types": "build/ByteAccordion.d.ts",
  "scripts": {
    "docs": "typedoc ./src/",
    "style": "eslint ./src/*.ts",
    "unit": "cross-env NODE_ENV=test nyc mocha --config test/.mocharc.json --reporter-options configFile=test/mocha.json ./test/*.spec.ts",
    "test": "npm run style && npm run unit",
    "build": "tsc -p ./tsconfig.json",
    "qc": "npm run build && npm run style && npm run unit",
    "prepublishOnly": "npm run docs && npm run build && npm run style && npm run unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damianb/ByteAccordion.git"
  },
  "keywords": [
    "file",
    "buffer",
    "expanding",
    "consumable",
    "stream"
  ],
  "author": "Damian Bushong <katana@odios.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/damianb/ByteAccordion/issues"
  },
  "homepage": "https://github.com/damianb/ByteAccordion#readme",
  "dependencies": {
    "@types/node": "^14.14.22"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "cypress-multi-reporters": "^1.4.0",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "mocha": "^8.2.1",
    "mocha-junit-reporter": "^2.0.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typedoc": "0.20.19",
    "typescript": "^4.1.3"
  }
}
